page {
  position: relative;
  width: 100vw;
  height: 100vh;
  background-color: #F6F7FB;
}
.logo-box {
  width: 100%;
  height: 420rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
          align-items: flex-end;
  box-sizing: 100%;
}
.logo-box image {
  width: 500rpx;
  height: 250rpx;
}
.login-form {
  margin: 0 60rpx;
}
.login-form .tip-box {
  margin-top: 90rpx;
  height: 200rpx;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.login-form .tip-box .upper {
  height: 100rpx;
  font-size: 48rpx;
  font-family: Source Han Sans SC;
  font-weight: 400;
  color: #041B3D;
}
.login-form .tip-box .upper image {
  padding-top: 10rpx;
  width: 50rpx;
  height: 50rpx;
}
.login-form .tip-box .upper text {
  padding-left: 30rpx;
}
.login-form .tip-box .lower {
  font-size: 28rpx;
  font-family: Source Han Sans SC;
  font-weight: 400;
  color: #7F8B9E;
}
.login-form .row {
  margin-bottom: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 128rpx;
  border-radius: 30rpx;
  background-color: #FFFFFF;
}
.login-form .row .left {
  width: 152rpx;
  height: 100%;
  font-size: 28rpx;
  font-family: Source Han Sans SC;
  font-weight: 400;
  color: #7F8B9E;
}
.login-form .row .account {
  font-size: 42rpx;
  font-family: Source Han Sans SC;
  font-weight: 400;
  color: #041B3D;
}
.login-form .row input {
  color: #223653;
  font-family: Source Han Sans SC;
  font-weight: 400;
  width: 470rpx;
  font-size: 28rpx;
}
.login-form .row .right {
  width: 138rpx;
}
.login-form .row .right image {
  width: 36rpx;
  height: 36rpx;
}
.login-form .os-center {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.login-form .login-btn {
  margin-top: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  font-size: 35rpx;
  font-family: Source Han Sans SC;
  height: 110rpx;
  color: #FFFFFF;
  border-radius: 25rpx;
  background-color: #407bff;
}
.input-placeholder {
  line-height: 100rpx;
  font-size: 28rpx;
  font-family: Source Han Sans SC;
  font-weight: 400;
  color: #ACAFB9;
}

